<main class="d-flex w-100 flex-grow-1">
    <section class="d-flex flex-column align-items-center w-50">
        <h1 class="bg-primary-subtle p-2 text-center text-primary w-100">REGISTER
            FORM</h1>
        <form class="d-flex flex-column w-50 m-3">
            <input class="m-2 p-2 text-center" type="text" name="product" id="productName" placeholder="PRODUCT NAME" />
            <input class="m-2 p-2 text-center" type="number" name="price" id="price" placeholder="PRICE" />
            <input class="m-2 p-2 text-center" type="number" name="stock" id="stock" placeholder="STOCK" />
            <input class="m-2 p-2 text-center" type="text" name="category" id="category" placeholder="CATEGORY" />
            <input class="m-2 p-2 text-center" type="text" name="imgProduct" id="imgProduct" placeholder="IMAGE PRODUCT" />
            <input class="m-2 p-2 text-center btn btn-primary" type="button" id="registerProduct" value="REGISTER PRODUCT!" />
        </form>
    </section>
    <section id="products" class="d-flex flex-wrap justify-content-evenly align-items-center" style="width: 50%; height: calc(100vh - 60px);"></section>
</main>
